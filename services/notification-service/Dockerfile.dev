FROM python:3.11.7-slim-bookworm

# DEV image: installs requirements-dev.txt during build (no runtime pip install)

USER root
RUN apt-get update \
 && apt-get install -y --no-install-recommends ca-certificates \
 && rm -rf /var/lib/apt/lists/*

WORKDIR /app

RUN addgroup --system app && adduser --system --ingroup app --home /home/app app
ENV HOME=/home/app
ENV PATH="/home/app/.local/bin:$PATH"

COPY requirements-dev.txt /app/requirements.txt
RUN python -m pip install --upgrade pip "setuptools>=78.1.1" "wheel>=0.46.2" \
 && pip install --no-cache-dir -r /app/requirements.txt

COPY --chown=app:app app ./app

USER app
EXPOSE 5002
CMD ["gunicorn", "-w", "2", "-b", "0.0.0.0:5002", "app.main:app"]
